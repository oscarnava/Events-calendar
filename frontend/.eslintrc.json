{
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,

    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:react/recommended"],
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "import/no-unresolved": "off",
    "no-shadow": 0,
    "no-param-reassign": 0,
    "eol-last": 0,
    "arrow-parens": ["error", "always"],
    "import/no-cycle": "off",
    "max-len": "off",
    "spaced-comment": "off"
  }
}
